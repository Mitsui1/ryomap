            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="スポットの編集が完了しました" />



        <Button

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/menu_back_button"

            android:text="メニュー画面へ" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>